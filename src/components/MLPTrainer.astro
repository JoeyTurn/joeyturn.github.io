---
import bootUrl from "../mlp-trainer/boot.js?url";

const BASE = import.meta.env.BASE_URL ?? "/";

// If bootUrl is already a full URL (data:, http:, https:), don't prefix it.
const hasScheme = /^[a-zA-Z][a-zA-Z0-9+.-]*:/.test(bootUrl);

const bootSrc = hasScheme
  ? bootUrl
  : `${BASE}${bootUrl.replace(/^\//, "")}`;
---

<div
  data-mlp-trainer
  style="max-width: 980px; padding: 1rem; border: 1px solid #eee; border-radius: 14px;"
>
  <div style="opacity:0.7;">(bootingâ€¦)</div>
</div>

<script type="module" src={bootSrc}></script>
