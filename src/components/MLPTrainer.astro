---
import bootUrl from "../mlp-trainer/boot.js?url";

const base = import.meta.env.BASE_URL ?? "/";
const baseNoTrail = base.endsWith("/") ? base.slice(0, -1) : base;

// bootUrl often starts with "/...". Prefix it with BASE_URL so it works on GH Pages subpaths.
const bootSrc = bootUrl.startsWith("/")
  ? `${baseNoTrail}${bootUrl}`
  : `${baseNoTrail}/${bootUrl}`;
---

<div
  data-mlp-trainer
  style="max-width: 980px; padding: 1rem; border: 1px solid #eee; border-radius: 14px;"
>
  <div style="opacity:0.7;">(bootingâ€¦)</div>
</div>

<script type="module" src={bootSrc}></script>
