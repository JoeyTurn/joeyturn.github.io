---
import BaseLayout from "../../layouts/BaseLayout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

// Build-time: enumerate paths and pass the entry via props
export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return posts.map((entry) => ({
    params: { slug: entry.slug },   // <-- MUST include "slug"
    props: { entry },               // pass the whole entry
  }));
}

// Per-page: receive the entry directly (no need to look it up again)
const { entry } = Astro.props as { entry: CollectionEntry<"blog"> };
const { Content } = await entry.render();
---
<BaseLayout title={`${entry.data.title} â€“ Blog`}>
  <h1>{entry.data.title}</h1>
  <Content />
</BaseLayout>
